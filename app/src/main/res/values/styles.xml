<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Boxotop.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">12dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Toolbar" parent="Base.TextAppearance.Boxotop">
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.20</item>
    </style>

    <style name="Base.TextAppearance.Boxotop" parent="TextAppearance.AppCompat.Display3">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
